<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_back"
    android:elevation="3dp">

    <CheckBox
        android:id="@+id/checkbox_rv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/whatthings"
        android:layout_alignBottom="@+id/whatthings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView_rv"
        style="@style/ItemStyle"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/whatthings"
        android:text="名字"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:shadowColor="#a2a2a2"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_toEndOf="@id/checkbox_rv"
        android:layout_toRightOf="@id/checkbox_rv" />

    <TextView
        android:id="@+id/tv_date"
        android:text="日期"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:shadowColor="#a2a2a2"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:text="时间"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:shadowColor="#a2a2a2"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_toLeftOf="@+id/tv_date"
        android:layout_marginRight="10dp"/>



</RelativeLayout>