<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tmt_clock_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/default_background_2"
    android:fitsSystemWindows="true"
    tools:context="com.example.txy.tm.SecondActivity.TmtClockShowActivity">

    <TextView
        android:text="显示"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cpb_countdown"
        android:layout_marginBottom="40dp"
        android:id="@+id/textView_clock" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_below="@+id/textView_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/imageView_clock" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/coma"
        android:id="@+id/imageView_coma"
        android:layout_toLeftOf="@+id/cpb_countdown"
        android:layout_toStartOf="@+id/cpb_countdown"
        android:layout_marginTop="10dp"
        android:layout_above="@id/textView_clock"
        android:layout_marginBottom="10dp"
        android:elevation="3dp"
        />

    <TextView
        android:text="信息"
        android:textSize="16dp"
        android:fontFamily="casual"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDx="3"
        android:shadowDy="3"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpb_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView_info" />


    <com.example.txy.tm.CountDownProgressBar
        android:id="@+id/cpb_countdown"
        android:layout_width="250dp"
        android:layout_gravity="center"
        app:countDown_centerTextSize="25dp"
        app:countDown_circleWidth="4dp"
        app:countDown_firstColor="#ffffff"
        app:countDown_secondColor="#bebebe"
        app:countDown_isShowGradient="true"
        app:countDown_centerTextColor="#ffffff"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
